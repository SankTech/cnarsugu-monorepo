# Dokploy Environment Configuration
# Copy this file to .env in your Dokploy project

# Domain Configuration
DOMAIN=your-domain.com

# Database Configuration
DB_NAME=cnarsugu
DB_USER=postgres
DB_PASSWORD=your_secure_database_password

# Redis Configuration
REDIS_PASSWORD=your_redis_password

# API Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com/api/v2
NEXT_PUBLIC_API_VERSION=v2

# App Configuration
NEXT_PUBLIC_APP_NAME=CNAR Sugu
NEXT_PUBLIC_APP_VERSION=1.0.0

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Feature Flags
NEXT_PUBLIC_ENABLE_LEGACY_PRODUCTS=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# Payment Configuration
NEXT_PUBLIC_PAYMENT_CALLBACK_URL=https://your-domain.com/payment/callback

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=GA-XXXXXXXXX
# NEXT_PUBLIC_HOTJAR_ID=XXXXXXX

# Monitoring (optional)
# SENTRY_DSN=https://your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key