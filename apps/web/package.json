{
  "name": "@cnarsugu/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "build:analyze": "cross-env ANALYZE=true next build",
    "build:production": "cross-env NODE_ENV=production next build",
    "start:production": "cross-env NODE_ENV=production next start",
    "docker:build": "docker build -t cnarsugu-web .",
    "docker:run": "docker run -p 3000:3000 cnarsugu-web",
    "registry:build": "../scripts/build-web-registry.sh",
    "deploy:web-only": "../scripts/deploy-web-only.sh",
    "deploy:local": "../scripts/deploy-web-only.sh local",
    "deploy:dokploy": "../scripts/deploy-web-only.sh dokploy",
    "build:windows": "cross-env NODE_ENV=production next build",
    "build:safe": "node ../scripts/build-web-cross-platform.js",
    "build:no-standalone": "cross-env DISABLE_STANDALONE=true next build",
    "build:dev": "cross-env NODE_ENV=development next build",
    "build:cross-platform": "node ../scripts/build-web-cross-platform.js",
    "build:v15": "cp next.config.v15.ts next.config.ts.tmp && mv next.config.ts next.config.ts.bak && mv next.config.ts.tmp next.config.ts && cross-env NODE_ENV=production next build && mv next.config.ts.bak next.config.ts",
    "build:clean": "node ../scripts/build-web-clean.js",
    "docker:build:windows": "docker build -f Dockerfile.windows -t cnarsugu-web ."
  },
  "dependencies": {
    "@cnarsugu/hooks": "workspace:*",
    "@cnarsugu/schemas": "workspace:*",
    "@cnarsugu/store": "workspace:*",
    "@cnarsugu/types": "workspace:*",
    "@cnarsugu/utils": "workspace:*",
    "@hookform/resolvers": "^5.2.2",
    "@reduxjs/toolkit": "^2.2.1",
    "clsx": "^2.1.0",
    "next": "^15.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.66.1",
    "react-redux": "^9.1.0",
    "tailwind-merge": "^2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.17",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.0.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
