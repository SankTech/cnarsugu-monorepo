{
  "name": "@cnarsugu/schemas",
  "version": "1.0.0",
  "private": true,
  "description": "Zod validation schemas for CNAR Sugu",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
