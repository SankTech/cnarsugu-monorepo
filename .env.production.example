# Production Environment Variables Template
# Copy this file to .env.production and update the values

# Database
DB_PASSWORD=your_secure_database_password

# API Configuration
NEXT_PUBLIC_API_URL=https://your-api-domain.com/api/v2
NEXT_PUBLIC_API_VERSION=v2

# App Configuration
NEXT_PUBLIC_APP_NAME=CNAR Sugu
NEXT_PUBLIC_APP_VERSION=1.0.0

# Domain Configuration
DOMAIN=your-domain.com

# Feature Flags
NEXT_PUBLIC_ENABLE_LEGACY_PRODUCTS=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# Payment Configuration
NEXT_PUBLIC_PAYMENT_CALLBACK_URL=https://your-domain.com/payment/callback

# Analytics (optional)
NEXT_PUBLIC_GA_ID=GA-XXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=XXXXXXX

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Email Configuration (if needed)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# Redis Configuration
REDIS_URL=redis://redis:6379

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key